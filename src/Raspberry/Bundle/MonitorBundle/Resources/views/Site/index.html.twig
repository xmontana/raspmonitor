{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Site list</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Name</th>
                <th>Url</th>
                <th>Icon</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_site_edit', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.url }}</td>
                <td><i class="{{ entity.icon }}"></i> {{ entity.icon }}</td>
                <td>
                     <a href="{{ path('admin_site_show', { 'id': entity.id }) }}"><i class="fa fa-eye fa-border"></i></a>
                        <a href="{{ path('admin_site_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil fa-border"></i></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a href="{{ path('admin_site_new') }}" class="btn btn-success" id="_new"><i class="fa fa-plus"></i>
               {{ 'Create a new'|trans }}
            </a>

    {% endblock %}
