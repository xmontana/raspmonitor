{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Site</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>Errors</th>
                <td>{{ entity.errors }}</td>
            </tr>
            <tr>
                <th>Lastcheck</th>
                <td>{{ entity.lastCheck|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ entity.icon }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_site') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_site_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
